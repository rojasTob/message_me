<h4 class="ui center aligned medium icon header">
  <i class="circular inverted purple wechat icon"></i>
  Say something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="messages-container">
          <% @messages.each do |message| %>
            <%= render message %>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with(model: @message, url: message_path, remote:true, class: "ui reply form") do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Write something" %>
              <%= f.button '<i class="bordered inverted purple edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">Home</a>
          <a class="item">Messages</a>
          <a class="item">Friends</a>
        </div>
      </div>
    </div>
  </div>
</div>



